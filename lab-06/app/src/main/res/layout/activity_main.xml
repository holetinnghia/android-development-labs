<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="MENU LAB 06"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnBai1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Bài 1: Fragment &amp; ViewPager2" />

    <Button
        android:id="@+id/btnViewFlipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bài 2a: ViewFlipper (Cơ bản)" />

    <Button
        android:id="@+id/btnBai2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Bài 2: Slider API (Retrofit)" />

    <Button
        android:id="@+id/btnBai3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bài 3: RecyclerView &amp; Search" />

</LinearLayout>